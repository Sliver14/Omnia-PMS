// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
  role     String
}

model Room {
  id          String       @id
  type        String
  floor       Int
  status      RoomStatus
  price       Float        @default(0)
  bookedRooms BookedRoom[]
}

model Booking {
  id                String        @id @default(cuid())
  title             String
  start             DateTime
  end               DateTime
  guest             Guest         @relation(fields: [guestId], references: [id])
  guestId           String
  status            BookingStatus
  paymentStatus     PaymentStatus @default(pending)
  paymentMethod     PaymentMethod @default(bank_transfer)
  isPaymentConfirmed Boolean       @default(false)
  totalPrice        Float @default(0) // New field for total price
  notes             String?
  bookedRooms       BookedRoom[]
}

model BookedRoom {
  id        String   @id @default(cuid())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId String
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  quantity  Int      @default(1) // In case we want to book multiple of the same room type
  price     Float // Price of the room at the time of booking
}

model Guest {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  phone    String
  bookings Booking[]
}

enum RoomStatus {
  cleaning
  maintenance
  ready
}

enum BookingStatus {
  confirmed
  checked_in
  checked_out
  cancelled
}

enum PaymentStatus {
  pending
  received
  failed
}

enum PaymentMethod {
  bank_transfer
  credit_card
  cash
}
