// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//
// =============== HOTEL MODEL ===============
//
model Hotel {
  id       String    @id
  name     String

  users     User[]
  rooms     Room[]
  guests    Guest[]
  bookings  Booking[]
}

//
// =============== USER MODEL ===============
//
model User {
  id       String @id @default(cuid())
  username String @unique
  password String
  role     String

  hotel   Hotel  @relation(fields: [hotelId], references: [id])
  hotelId String
}

//
// =============== ROOM MODEL ===============
//
model Room {
  id          String       @id
  type        String
  floor       Int
  status      RoomStatus
  price       Float        @default(0)

  hotel   Hotel @relation(fields: [hotelId], references: [id])
  hotelId String

  bookedRooms BookedRoom[]
}

//
// =============== GUEST MODEL ===============
//
model Guest {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  phone    String

  hotel   Hotel @relation(fields: [hotelId], references: [id])
  hotelId String

  bookings Booking[]
}

//
// =============== BOOKING MODEL ===============
//
model Booking {
  id                 String         @id @default(cuid())
  title              String
  start              DateTime
  end                DateTime
  status             BookingStatus
  totalPrice         Float          @default(0)
  notes              String?

  hotel   Hotel @relation(fields: [hotelId], references: [id])
  hotelId String

  guest    Guest    @relation(fields: [guestId], references: [id])
  guestId  String

  paymentStatus     PaymentStatus @default(pending)
  paymentMethod     PaymentMethod @default(bank_transfer)
  isPaymentConfirmed Boolean       @default(false)

  bookedRooms       BookedRoom[]
}

//
// =============== BOOKED ROOM MODEL ===============
//
model BookedRoom {
  id        String   @id @default(cuid())

  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId String

  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String

  quantity  Int      @default(1)
  price     Float
}

//
// =============== ENUMS ===============
//
enum RoomStatus {
  cleaning
  maintenance
  ready
}

enum BookingStatus {
  confirmed
  checked_in
  checked_out
  cancelled
}

enum PaymentStatus {
  pending
  received
  failed
}

enum PaymentMethod {
  bank_transfer
  credit_card
  cash
}
